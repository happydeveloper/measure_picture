<!DOCTYPE html>
<html>
<head>
	<meta charset=utf-8 />
	<title>image measurement</title>
</head>
<body>
	<h1>Prototype</h1>
	<div id="image_area">
	<p>this is imagearea</p>
	<img id="measure_img" src="FTO_AL2O3_TiCl_m003.jpg" border="0" width="50%" height="50%" alt="2560, 1920" />
	</div>
	<div>
		<canvas id="myCanvas"   style="border:1px solid #d3d3d3;">
		Your browser does not support the HTML5 canvas tag.
		</canvas>		
	</div>
	<div id="result">
	</div>
	<script type="text/javascript">
		
		//save measure_values
		var coordinates = [];

		var pos_x;
		var pos_y;

		var img = document.getElementById('measure_img');	
		img.addEventListener('click', function(event) {
			var x = event.pageX, y = event.pageY;
			console.log(x-img.offsetLeft);
			console.log(y-img.offsetTop);
			
			pos_x = x-img.offsetLeft;
			pos_y = y-img.offsetTop;
			var result = document.getElementById('result');

			coordinates.push({ x : pos_x ,y : pos_y});
			
			result.innerHTML = "";
			coordinates.forEach(function(coordinate){
				result.innerHTML += "<p> x 좌표 : "+coordinate.x +" y 좌표 : " +coordinate.y +"</p>"; 
			});
		}, false);

	</script>

	<script>
	//Draw function
	var c = document.getElementById("myCanvas");
	var ctx = c.getContext("2d");
	ctx.drawImage(img, 0, 0);
	</script>
</body>
</html>
